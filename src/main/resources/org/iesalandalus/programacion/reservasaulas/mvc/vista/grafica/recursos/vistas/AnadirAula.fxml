<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="260.0" prefWidth="551.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.iesalandalus.programacion.reservasaulas.mvc.vista.grafica.controladores.ControladorAnadirAula">
   <children>
      <VBox alignment="CENTER" prefHeight="260.0" prefWidth="551.0">
         <children>
            <Label alignment="CENTER" contentDisplay="RIGHT" prefHeight="35.0" prefWidth="553.0" text="Insertar un aula">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="89.0" prefWidth="551.0" spacing="20.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="0.0" prefWidth="189.0" spacing="10.0">
                     <children>
                        <Label text="Aula:">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="tfAula" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="89.0" prefWidth="237.0" spacing="10.0">
                     <children>
                        <Label text="Capacidad">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="tfCapacidad" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <Button fx:id="btnInsertarAula" onAction="#insertarAula" alignment="TOP_LEFT" mnemonicParsing="false" text="Insertar aula">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
